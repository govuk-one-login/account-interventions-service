{
  "name": "account-interventions-service",
  "description": "Account interventions service",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.21",
  "scripts": {
    "test": "yarn test:unit --runInBand",
    "test:unit": "jest --group=unit --coverage --runInBand --testPathIgnorePatterns \"src/contract-testing/*\"",
    "test:pact:provider": "jest --group=contract --runInBand --testPathPatterns=\"src/contract-testing/provider/*\"",
    "test:pact:consumer": "jest --group=contract --runInBand --testPathPatterns=\"src/contract-testing/consumer/*\"",
    "connect:pact:broker": "tsc src/contract-testing/test-helpers/connect-to-pact-broker.ts && node src/contract-testing/test-helpers/connect-to-pact-broker.js",
    "pact:publish:contracts": "tsc src/contract-testing/test-helpers/publish-pacts.ts && node src/contract-testing/test-helpers/publish-pacts.js",
    "lint": "yarn lint:code && yarn lint:spec && yarn lint:iac",
    "lint:code": "eslint --ext .ts . ./feature-tests",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:iac": "for f in src/infra/**/template.yaml; do (sam validate --lint -t $f) || exit 1; done",
    "lint:spec:oas": "spectral lint src/specs/api.yaml",
    "lint:spec": "yarn lint:spec:oas",
    "audit:fix": "yarn-audit-fix",
    "clean": "rimraf .aws-sam coverage",
    "build": "sam build -t src/infra/main/template.yaml",
    "package": "yarn clean && yarn build",
    "precommit": "pre-commit run",
    "postinstall": "husky"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.30.2",
    "@aws-lambda-powertools/metrics": "^2.30.2",
    "@aws-lambda-powertools/tracer": "^2.30.2",
    "@aws-sdk/client-dynamodb": "^3.967.0",
    "@aws-sdk/client-sqs": "^3.967.0",
    "@aws-sdk/util-dynamodb": "^3.967.0",
    "@smithy/node-http-handler": "^4.0.6"
  },
  "devDependencies": {
    "@aws-sdk/client-sso-oidc": "^3.943.0",
    "@aws-sdk/client-sts": "^3.943.0",
    "@pact-foundation/pact": "^16.0.2",
    "@pact-foundation/pact-node": "^10.18.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/aws-lambda": "^8.10.159",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.54",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "aws-crt": "^1.27.5",
    "aws-lambda": "^1.0.7",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "esbuild": "^0.27.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-openapi": "^0.14.2",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "yarn-audit-fix": "^10.0.9"
  },
  "resolutions": {
    "axios": "^1.8.2",
    "cookie": "^0.7.0",
    "cross-spawn": "^7.0.5",
    "@babel/helpers": "^7.26.10",
    "form-data": "4.0.4",
    "qs": "6.14.1"
  }
}
